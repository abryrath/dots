#!/usr/bin/env bash

function addPackage() {
    package="$1"
    if [[ -n $(yay -Qs "$package" &> /dev/null) ]]; then
        echo "$package should be added"
        yay -S "$package"
    else
        echo "$package is already installed. Skipping..."
    fi
}

addPackage 'ttf-fira-sans'
addPackage 'ttf-envy-code-r'
addPackage 'otf-font-awesome-5-free'
addPackage 'nerd-fonts-complete'
addPackage 'xorg-server'
addPackage 'xorg-xinit'
addPackage 'xorg-xrandr'
addPackage 'xorg-xrdb'
addPackage 'compton-git'
addPackage 'bspwm-git'
addPackage 'sxhkd-git'
addPackage 'polybar-git'
addPackage 'dunst-git'
addPackage 'nitrogen-git'
addPackage 'xautolock'
addPackage 'i3lock-fancy-git'
addPackage 'conky-git'
addPackage 'emacs-git'
addPackage 'scrot-git'
addPackage 'rofi-git'
addPackage 'networkmanager-git'
addPackage 'stow'
addPackage 'openvpn'
addPackage 'networkmanager-openvpn-git'
addPackage 'nordvpn'

