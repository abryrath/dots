#!/bin/sh
exec tail -n +3 $0
# This file provides an easy way to add custom menu entries.  Simply type the
# menu entries you want to add after this comment.  Be careful not to change
# the 'exec tail' line above.
menuentry "Gentoo Custom" {
    load_video
    insmod gzio
    insmod part_gpt
    set root='hd0,gpt1'
    search --no-floppy --fs-uuid --set=root 860D-2AD2
    echo "Loading kernel..."
    linux /vmlinuz-4.14.14-gentoo root=UUID=2df9b8f6-81b1-4648-b1b3-3634e8a97686 rw init=/usr/lib/systemd/systemd
    echo "Loading ramdsk..."
    initrd /initramfs-4.14.14-gentoo.img
}
